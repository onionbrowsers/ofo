/* pages/warn/warn.wxss */
.container{
  width: 100%;
  background: #f2f2f2
}
.title{
  padding: 30rpx 0 30rpx 40rpx;
  font-size: 30rpx;
  background: #f2f2f2
}
.choose{
  background: #fff;
}
.choose .grids{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.grid{
  width: 45%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1px solid #b9dd08;
  margin:20rpx 0;
  border-radius: 10rpx;
}
.pic{
  background: #fff;
  padding: 30rpx 0 30rpx 80rpx;
}
.pic image{
  height: 120rpx;
  width: 120rpx;
  margin-right: 40rpx;
  position: relative;
  overflow: visible;
  margin-bottom: 20rpx;
}
.del{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.pic text{
  display: inline-block;
  font-size: 20rpx;
  color: #ccc;
  height: 120rpx;
  width: 120rpx;
  border: 1px dashed #333;
  line-height: 120rpx;
  text-align: center;
  vertical-align: top;
}
.action-input{
  margin-top:30rpx;
  background: #fff;
  padding: 30rpx 0 30rpx 40rpx;
}
.action-input input{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 100%;
}
input:nth-of-type(1){
  border-bottom: 1px dotted #ccc;
}
.submit{
  background: #f2f2f2;
  padding: 20rpx 40rpx;
}
.submit button{
  background: #b9dd08;
}