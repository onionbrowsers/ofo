/* pages/wallet/wallet.wxss */
.container{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
}
.money{
  background: #fff;
  padding: 40rpx;
}
.money-header,.money-content,.money-desc{
  text-align: center;
}
.money-header{
  font-size: 35rpx;
}
.money-content{
  margin:60rpx 0;
  font-size: 100rpx;
  font-weight: 700;
}
.money-desc text{
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 35rpx;
  border: 1px solid #aaa;
}
button{
  background: #b9dd08;
  width: 90%;
  margin: 30rpx auto;
}
.same{
  background: #fff;
  display: flex;
  padding: 40rpx;
  justify-content: space-between;
  font-size: 32rpx;
}
.my-cost{
  margin-top: 4px;
}
.options{
  margin-top:40rpx; 
}